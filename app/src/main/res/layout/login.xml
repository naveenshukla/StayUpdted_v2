<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlayout"
    android:background="#09a203">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UserName : "
        android:id="@+id/a"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact : "
        android:id="@+id/b"
        android:layout_below="@+id/a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address : "
        android:id="@+id/c"
        android:layout_below="@+id/b"
        android:layout_alignRight="@+id/b"
        android:layout_alignEnd="@+id/b"
        android:padding="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Number"
        android:id="@+id/updatebtn"
        android:padding="20dp"
        android:onClick="updatedata"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/c" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:onClick="search"
        android:id="@+id/search"
        android:layout_below="@id/updatebtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/a"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:textIsSelectable="true"
        android:textSize="25dp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_alignTop="@+id/a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_alignTop="@+id/b"
        android:layout_alignBottom="@+id/b"
        android:padding="10dp"
        android:textSize="25dp"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_alignBottom="@+id/c"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/contact"
        android:layout_below="@+id/contact"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/c" />

</RelativeLayout>
